<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.fmo">


    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Main">

        <activity
            android:name=".Main"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".bftp.BFTPActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="BFTP"
            android:screenOrientation="landscape"
            android:theme="@style/Fullscreen" />

        <activity
            android:name=".ocvrec.OCVRecActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="OCVRec"
            android:screenOrientation="landscape"
            android:theme="@style/Fullscreen"/>

        <activity
            android:name=".ocvrec2.OcvRec2Activity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="OCVRec2"
            android:screenOrientation="landscape"
            android:theme="@style/Fullscreen"/>

        <activity
            android:name="cz.fmo.recording.RecordingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Recording"
            android:screenOrientation="landscape"
            android:theme="@style/Fullscreen" />

        <activity
            android:name="cz.fmo.recording2.Recording2Activity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Recording2"
            android:screenOrientation="landscape"
            android:theme="@style/Fullscreen"/>

        <activity
            android:name="com.android.grafika.PlayMovieSurfaceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Play movie"
            android:screenOrientation="landscape"
            android:theme="@style/Fullscreen" />
    </application>

</manifest>
