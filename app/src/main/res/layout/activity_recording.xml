<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       tools:context="cz.fmo.RecordingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/recording_preview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/recording_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/initializing"
            android:textAppearance="@android:style/TextAppearance.Material.Large"/>

        <TextView
            android:id="@+id/recording_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/initializing"
            android:textAppearance="@android:style/TextAppearance.Material.Large"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recording_start_manual_recording"
                android:onClick="onStartManualRecording"
                android:text="@string/startManualRecording"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                tools:ignore="RelativeOverlap"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recording_stop_manual_recording"
                android:onClick="onStopManualRecording"
                android:text="@string/stopManualRecording"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                tools:ignore="RelativeOverlap"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recording_force_automatic_recording"
                android:onClick="onForceAutomaticRecording"
                android:text="@string/forceAutomaticRecording"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                tools:ignore="RelativeOverlap"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <ToggleButton
                android:id="@+id/recording_record_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/recordToggleOn"
                android:textOff="@string/recordToggleOff"
                android:onClick="onRecordToggle"/>

            <ToggleButton
                android:id="@+id/recording_auto_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/autoToggleOn"
                android:textOff="@string/autoToggleOff"
                android:onClick="onAutoToggle"/>

            <ToggleButton
                android:id="@+id/recording_detect_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/detectToggleOn"
                android:textOff="@string/detectToggleOff"
                android:onClick="onDetectToggle"/>
        </LinearLayout>
    </RelativeLayout>
</merge>
